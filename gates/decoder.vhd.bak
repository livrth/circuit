library ieee; 
use ieee.std_logic_1164.all;

entity DECODER is
port(	I: in std_logic_vector(1 downto 0);
	      O: out std_logic_vector(3 downto 0)
);
end DECODER;

architecture when_else of DECODER is
begin
	
    -- use when..else statement

    O <= 	"0001" when I = "00" else
		"0010" when I = "01" else
		"0100" when I = "10" else
		"1000" when I = "11" else
		"XXXX";

end when_else;
